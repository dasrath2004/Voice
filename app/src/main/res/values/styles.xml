<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography tokens (basic) -->
    <style name="TextAppearance.VoiceTaskManager.Headline" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.VoiceTaskManager.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Typography -->
    <style name="TextAppearance.VTM.Headline" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">@font/rubik_family</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextAppearance.VTM.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/rubik_family</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <!-- Primary Button -->
    <style name="Widget.VTM.PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.VTM.ButtonText</item>
        <item name="backgroundTint">@color/primaryBlue</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="TextAppearance.VTM.ButtonText" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">@font/rubik_family</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>
