<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.voicetaskmanager">
    <!-- Required Permissions -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" /> <!-- External storage (read only for Android 32↓) -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VoiceTaskManager">
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".EmailSignupActivity"
            android:exported="false" /> <!-- Splash = LAUNCHER -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.VoiceTaskManager.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Login -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" /> <!-- Signup options (Google / Phone) -->
        <activity
            android:name=".SignupOptionsActivity"
            android:exported="false" /> <!-- Phone Signup: phone → OTP → password (single screen) -->
        <activity
            android:name=".PhoneSignupActivity"
            android:exported="false" /> <!-- Complete profile (username etc.) -->
        <activity
            android:name=".SetupProfileActivity"
            android:exported="false" /> <!-- Main App Screen -->
        <activity
            android:name=".MainActivity"
            android:exported="false" /> <!-- Settings Screen -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false" />
    </application>

</manifest>